	/**
	 * Call to System.loadLibrary. If this fails we will need to call System.load()
	 * 
	 * @param library
	 * @return
	 */
	public boolean loadLibrary(String library) {
		try {
			System.loadLibrary(library);
			return true;
		} catch (Throwable ex) {
			return false;
		}
	}


	/**
	 * Returns the missing libraries which have not been installed on this system
	 * and which we need to provide separatly
	 * 
	 * @return
	 */
	public List<String> getUninstalledLibraries() {
		return this.uninstalledLibraries;
	}

	/**
	 * Calls System.load() on all necessary libraries
	 * 
	 * @throws IOException
	 */
	public void load() throws IOException {
		// convert filenames to java File
		List<File> libraries = this.getUninstalledLibraries().stream().map(name -> this.createFile(name))
				.collect(Collectors.toList());

		// load the files
		try {
			loadFile(libraries.get(libraries.size() - 1));
		} catch (Throwable ex) {
			LOG.info("Could not load libshogun: {} - we try to load all libraries", ex.getMessage());
			libraries.forEach(file -> loadFile(file));
		}

		LOG.info("All libraries have been loaded!");
	}

